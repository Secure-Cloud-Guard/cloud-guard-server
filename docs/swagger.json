{
  "swagger": "2.0",
  "info": {
    "title": "Cloud Guard API",
    "version": "1.0.0",
    "description": "The Cloud Guard server that provide API for the client. Made with NodeJS, Express and Swagger."
  },
  "basePath": "/api/s3",
  "tags": [
    {
      "name": "Bucket",
      "description": "Operations related to S3 buckets"
    },
    {
      "name": "Bucket Objects",
      "description": "Operations related to objects within S3 buckets"
    }
  ],
  "paths": {
    "/bucket": {
      "post": {
        "tags": [
          "Bucket"
        ],
        "summary": "Create S3 bucket for the specific user",
        "description": "Creates an S3 bucket for the specific user.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Bucket created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "Location": {
                  "type": "string",
                  "description": "The URL/location of the created bucket"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Description of the error"
                }
              }
            }
          }
        }
      }
    },
    "/bucket/objects": {
      "get": {
        "tags": [
            "Bucket Objects"
        ],
        "summary": "Get list of objects for S3 bucket",
        "description": "Retrieves a list of objects for the specified S3 bucket.",
        "produces": [
            "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "Key": {
                    "type": "string",
                    "description": "The key/name of the object"
                  },
                  "Size": {
                    "type": "integer",
                    "description": "The size of the object in bytes"
                  },
                  "LastModified": {
                    "type": "string",
                    "description": "The object last modified date"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Description of the error"
                }
              }
            }
          }
        }
      }
    }
  }
}